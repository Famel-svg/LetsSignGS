    <script>
      function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("collapsed");
      }

      function confirmLogout() {
        const confirmed = confirm("Você será desconectado. Deseja continuar?");
        if (confirmed) {
          window.location.href = "../Login/LetsSign_Login.html"; // ajuste o caminho conforme seu projeto
        }
      }
    </script>

